{
  "name": "tickytock",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:e2e": "VITE_MODE=test vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json && tsc --noEmit --project ./tsconfig.e2e.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "cucumber-js -c cucumber.config.cjs",
    "test:e2e:headed": "HEADED=true cucumber-js -c cucumber.config.cjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.5.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.2",
    "@tsconfig/svelte": "^5.0.4",
    "@types/bootstrap": "^5.2.10",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^17.0.0",
    "happy-dom": "^20.1.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "pouchdb-adapter-memory": "^9.0.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.18.0",
    "svelte-check": "^4.1.3",
    "svelte-eslint-parser": "^1.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16",
    "workbox-window": "^7.4.0"
  },
  "lint-staged": {
    "*.{ts,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "e2e/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'tsc --noEmit --project ./tsconfig.e2e.json'"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@mrbelloc/encrypted-pouch": "^0.1.0",
    "@tabler/core": "^1.4.0",
    "@tabler/icons-svelte": "^3.36.1",
    "@types/pouchdb": "^6.4.2",
    "apexcharts": "^5.3.6",
    "bootstrap": "^5.3.8",
    "events": "^3.3.0",
    "pouchdb-browser": "^8.0.1",
    "svelte-spa-router": "^4.0.1"
  }
}
